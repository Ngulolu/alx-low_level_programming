#include "main.h"
#include <stdio.h>
#include <unistd.h>

/**
 *print_last_digit - a function that prints the last digit of a number
 *@nld : number's last digit result
 *Return :value of the last digit
 */

int print_last_digit(int nld)
{
	int wld;

	wld = (nld % 10);

	if (wld < 0)
	{
		wld = (-1 * wld);
	}

	_putchar(pld + '0');
	return (pld);
}
